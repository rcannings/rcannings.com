{{!< default}}

<main class="content" role="main">
    <div class='bk-top-nav' {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        {{> menu}}
    </div>
</main>

<article data-animate="fadeIn" class="{{post_class}}">
    
    {{#post}}

    <header class="post-header">
    
        <h1 class="post-title">{{{title}}}</h1>
    
    </header>

    <section class="single-post-content">
    
        {{content}}
            
            
    </section>

    <footer class="post-footer">
        <section class="blog-social blog-social-page">

            <h4>Follow us</h4>
            {{! Including the social template (partials/social)}}
            {{> socials}}
        
        </section>
    
    </footer>
            
    <div class="back-post">
        <a href="{{@blog.url}}/#blog">Back to all post</a>
    </div>
    
    {{/post}}
    
</article>
