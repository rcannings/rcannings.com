{{!< default}}
<main class="content" role="main">
    <div class='bk-top-nav' {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
        {{> menu}}
    </div>
</main>

<article data-animate="fadeIn" class="{{post_class}}">
    
    {{#post}}

    <header class="post-header">
        
        <span class="post-data"><time class="post-info" datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time></span>
        
        <a href="{{url}}#disqus_thread" class="post-comment"></a>
        
        <h1 class="post-title">{{{title}}}</h1>
    
    </header>

    <section class="single-post-content">
        
        {{content}}
        

        <h5 class="single-post-content-tag">Tag</h5> 
        
        <ul class="menu-list-tag single-post-tags" >
            {{#foreach tags}}
                <li><span>{{name}}</span></li>
            {{/foreach}}
        </ul>
    </section>
    
    <div data-animate="fadeDown">
        
        <footer class="post-footer">
        {{#if author.name}}
            <section class="author">
                    
                <figure class="user-image">
                    <div id="user-image" class="img" {{#if author.image}}style="background-image: url({{author.image}})"{{/if}}></div>
                </figure>
                
                <div class="info-author">
                        
                    <h4>{{author.name}}</h4>
                    <p>
                        {{author.bio}}
                    </p>
                </div>
            
            </section>
            {{/if}}
    
            <section class="share">
            
                <h4>Share</h4>
                
                 <a class="icon-twitter" href="" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    
                    <span class="hidden">Twitter</span>
                </a>
                    
                <a class="icon-facebook" href="" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    
                    <span class="hidden">Facebook</span>
                </a>
                
                <a class="icon-google-plus" href="" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    
                    <span class="hidden">Google+</span>
                </a>
            
            </section>

        </footer>
        
        <div class="back-post">
            <a href="{{@blog.url}}/#blog">Back to all post</a>
        </div>


        {{> comments}}
        {{/post}}
        
    </div>
    
</article>